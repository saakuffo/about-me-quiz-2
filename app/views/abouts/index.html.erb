  <% @projects.each do |project| %>
    <div class="col-xs-3 booyah-box box-control">
      <%= image_tag project.photolink, class: 'img-thumbnail image-control' %>
      <h3>
        <%= link_to project.appname, project.demo %>
      </h3>
      <p>
        <%= project.description %>
      </p>
